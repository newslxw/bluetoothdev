<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="5dp"
    android:id="@+id/bedItem">
    
    <TableLayout
        android:layout_width="fill_parent"
      android:layout_height="@dimen/height_list_row"
      android:gravity="center_vertical"
        android:shrinkColumns="1"
        android:stretchColumns="1" >

      
        <TableRow
            android:id="@+id/normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ItemImage"
                android:layout_width="@dimen/ic_size_body_art"
                android:layout_height="@dimen/ic_size_body_art"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:scaleType="center"
                android:src="@drawable/ic_art_person" />

            <TextView
                android:id="@+id/bedNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:padding="5dp"
                android:textSize="@dimen/text_size_body" />
            


			<LinearLayout
			    android:id="@+id/layout_item_btn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="horizontal"
			    android:scrollbarAlwaysDrawVerticalTrack="false" >
			
			            <ImageView
			                android:id="@+id/delGroupBed"
					      android:layout_width="wrap_content"
					      android:layout_height="wrap_content"
			      			android:layout_gravity="center_vertical"
						      android:paddingLeft="@dimen/padding_list_item_btn"
						      android:paddingRight="@dimen/padding_list_item_btn"
			                android:scaleType="center"
			                android:src="@drawable/button_del" />
			            
			            <ImageView
			                android:id="@+id/delBed"
					      android:layout_width="wrap_content"
					      android:layout_height="wrap_content"
					      android:layout_gravity="center_vertical"
					      android:paddingLeft="@dimen/padding_list_item_btn"
					      android:paddingRight="@dimen/padding_list_item_btn"
			                android:scaleType="center"
			                android:src="@drawable/ic_btn_remove" />
			            
			</LinearLayout>



        </TableRow>
        <!-- 
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_list_row"
        android:gravity="center_vertical"
        android:shrinkColumns="1"
        android:stretchColumns="1"
        android:visibility="gone" > -->
        
        <TableRow
            android:id="@+id/modification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ItemImage"
                android:layout_width="@dimen/ic_size_body_art"
                android:layout_height="@dimen/ic_size_body_art"
                android:padding="5dip"
                android:scaleType="center"
                android:src="@drawable/ic_art_person" />

            <EditText
                android:id="@+id/newBedNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
            	android:minWidth="@dimen/min_width_edittext"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="@dimen/text_size_body" />

            			<LinearLayout
			    android:id="@+id/layout_item_btn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="horizontal"
			    android:scrollbarAlwaysDrawVerticalTrack="false" >
            <ImageView
                android:id="@+id/updateBed"
					      android:layout_width="wrap_content"
					      android:layout_height="wrap_content"
					      android:layout_gravity="center_vertical"
					      android:paddingLeft="@dimen/padding_list_item_btn"
					      android:paddingRight="@dimen/padding_list_item_btn"
                android:scaleType="center"
                android:src="@drawable/button_save" />
			            
			</LinearLayout>
            
            			

        </TableRow>

    </TableLayout>

</LinearLayout>