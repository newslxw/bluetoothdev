<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:descendantFocusability="afterDescendants"
    android:id="@+id/groupItem" >

    <TableLayout
        android:layout_width="match_parent"
	      android:layout_height="@dimen/height_list_row"
	      android:gravity="center_vertical"
        android:shrinkColumns="1"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ic_waiting"
                android:layout_width="@dimen/ic_size_body_art"
                android:layout_height="@dimen/ic_size_body_art"
                android:padding="5dp"
                android:scaleType="center"
                android:src="@drawable/ic_art_group" />

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textSize="@dimen/text_size_body" />

            

			<LinearLayout
			    android:id="@+id/layout_item_btn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="horizontal"
			    android:scrollbarAlwaysDrawVerticalTrack="false" >
			            
			 <Button
			                android:id="@+id/assignBed"
			                style="?android:attr/buttonStyleSmall"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
					      android:paddingLeft="@dimen/padding_list_item_btn"
					      android:paddingRight="@dimen/padding_list_item_btn"
			                android:focusable="false"
			                android:text="@string/assignBed"
			                android:textSize="@dimen/text_size_body_btn" />
			
			            <Button
			                android:id="@+id/delGroup"
			                style="?android:attr/buttonStyleSmall"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
					      android:paddingLeft="@dimen/padding_list_item_btn"
					      android:paddingRight="@dimen/padding_list_item_btn"
			                android:focusable="false"
			                android:text="@string/button_delete"
			                android:textSize="@dimen/text_size_body_btn" />
			            			            
			</LinearLayout>

            
			
           

        </TableRow>
        <!-- 
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="1" > -->
            
        <TableRow
            android:id="@+id/modification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="@dimen/ic_size_body_art"
                android:layout_height="@dimen/ic_size_body_art"
                android:padding="5dp"
                android:scaleType="center"
                android:src="@drawable/ic_art_group" />

            <EditText
                android:id="@+id/newGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:minWidth="200dp"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="@dimen/text_size_body" />

            

			<LinearLayout
			    android:id="@+id/layout_item_btn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:orientation="horizontal"
			    android:scrollbarAlwaysDrawVerticalTrack="false" >
			            
			            	
			            
            <ImageView
                android:id="@+id/updateGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
		      android:paddingLeft="@dimen/padding_list_item_btn"
		      android:paddingRight="@dimen/padding_list_item_btn"
                android:scaleType="center"
                android:src="@drawable/button_save" />
            		            
			</LinearLayout>
			

        </TableRow>

    </TableLayout>

</LinearLayout>