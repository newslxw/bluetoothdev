<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:paddingRight="50dp" >
  
  <TableLayout
      android:layout_width="fill_parent"
      android:layout_height="@dimen/height_list_row"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:gravity="center_vertical"
      android:minWidth="20dp"
      android:shrinkColumns="2,3"
      android:stretchColumns="3" >

      <TableRow
          android:id="@+id/tableRow1"
          android:layout_height="wrap_content"
          android:gravity="center_vertical" >
          
  <ImageView
      android:id="@+id/ItemImage"
      android:layout_width="@dimen/ic_size_body_art"
      android:layout_height="@dimen/ic_size_body_art"
      android:layout_gravity="center_vertical"
      android:padding="5dip"
      android:scaleType="center"
      android:src="@drawable/ic_art_person" />
  
  <!-- 
      把按钮背景设置为透明:     android:background= "#00000000" 
      把按钮背景设置为半透明:     android:background= "#e0000000" 
      -->
  
  <TextView
      android:id="@+id/ItemWinName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/ItemImage"
      android:gravity="left|fill_vertical"
      android:minWidth="70dp"
      android:padding="5dp"
      android:text="101"
      android:textSize="@dimen/text_size_body"
      android:width="70dp" />

  <TextView
      android:id="@+id/inDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/itemT"
      android:layout_alignBottom="@+id/itemT"
      android:minWidth="150dp"
      android:padding="5dp"
      android:text="02-01 14:20"
      android:textSize="@dimen/text_size_body"
      android:width="150dp" />

  <TextView
      android:id="@+id/itemT"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:text="36.101"
      android:textSize="@dimen/text_size_body" />

<LinearLayout
    android:id="@+id/layout_item_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:scrollbarAlwaysDrawVerticalTrack="false" >

<ImageButton
    android:id="@+id/btnDel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/padding_list_item_btn"
    android:paddingRight="@dimen/padding_list_item_btn"
    android:src="@drawable/button_del"
    android:visibility="visible" />

  <ImageButton
      android:id="@+id/btnSave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_gravity="center_vertical"
      android:background="@color/transparent"
      android:paddingLeft="@dimen/padding_list_item_btn"
      android:paddingRight="@dimen/padding_list_item_btn"
      android:src="@drawable/button_save"
      android:visibility="invisible" />

</LinearLayout>

    
      </TableRow>

     
  </TableLayout>
   
</RelativeLayout>